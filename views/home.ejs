<%- include ("partials/header") %>


<div id="header" class="container">
  <div class="jumbotron">
    <div class="text-center text-white">
      <h1 class="display-4 ">COVID19-INDIA</h1>
      <p class="lead">We keep you updated!!</p>
    </div>
    <hr class="my-4">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-2 col-3 ">
        <div id="red" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1">Confirmed</p>
          <p id="count"><%= data["data"]["summary"]["total"] %></p>
        </div>
      </div> 
      <div class="col-md-2 col-3">
        <div id="blue" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1">Active</p>
          <p id="count"><%= data["data"]["summary"]["total"] - data["data"]["summary"]["discharged"] - data["data"]["summary"]["deaths"] %></p>
        </div>
      </div>
      <div class="col-md-2 col-3">
        <div id="green" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1">Recovered</p>
          <p id="count"><%= data["data"]["summary"]["discharged"] %></p>
        </div>
      </div>
      <div class="col-md-2 col-3">
        <div id="dark" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1">Deceased</p>
          <p id="count"><%= data["data"]["summary"]["deaths"] %></p>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="my-5">
        <input class="form-control" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for state" title="Type in a name">
      </div>
      <table id="myTable" class="mb-5 start">
        <thead class="heading">
            <td class="pl-3">State</td>
            <td> </td>
            <td class="pl-3">Confirmed</td>
            <td> </td>
            <td class="pl-3">Active</td>
            <td> </td>
            <td class="pl-3">Recovered</td>
            <td> </td>
            <td class="pl-3">Deceased</td>
        </thead>
        <tbody>
            <% data["data"]["regional"].forEach(function(state){ %>
             
                <tr>
                    <td class="pl-3"><a href="/city/<%= state.loc %>"><%= state.loc %></a></td>
                    <td> </td>
                    <td class="pl-3 text-danger"><%= state.totalConfirmed %></td>
                    <td> </td>
                    <td class="pl-3 text-info"><%= state.totalConfirmed - state.discharged - state.deaths%></td>
                    <td> </td>
                    <td class="pl-3 text-success"><%= state.discharged %></td>
                    <td> </td>
                    <td class="pl-3 text-dark"><%= state.deaths %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
  </div>
</div>



