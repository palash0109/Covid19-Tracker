<%- include ("partials/header") %>

<% function numberWithCommas(x) { %>
  <% return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); %>
<% } %>
<!-- JUMBOTRON -->
<div class="container" id="header">
  <div class="jumbotron">
    <div class="text-center text-white" id="jumboContent">
      <h1 class="display-4" id="jumboHeading">COVID19-<span class="name">INDIA</span></h1>
      <p class="lead" id="jumboLead">We keep you updated!!</p>
    </div>
    <hr class="my-4">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-2 col-3 ">
        <div id="red" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1 indiaData">Confirmed</p>
          <p id="count"><%= numberWithCommas(data["data"]["total"].confirmed) %></p>
        </div>
      </div> 
      <div class="col-md-2 col-3">
        <div id="blue" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1 indiaData">Active</p>
          <p id="count"><%= numberWithCommas(data["data"]["total"].active) %></p>
        </div>
      </div>
      <div class="col-md-2 col-3">
        <div id="green" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1 indiaData">Recovered</p>
          <p id="count"><%= numberWithCommas(data["data"]["total"].recovered) %></p>
        </div>
      </div>
      <div class="col-md-2 col-3">
        <div id="dark" class="text-center text-white">
          <p class="mb-0 pt-2 pb-1 indiaData">Deceased</p>
          <p id="count"><%= numberWithCommas(data["data"]["total"].deaths) %></p>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>


<!-- Search Bar And Table -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="mt-md-5 mt-4 mb-4 mb-md-5">
        <input class="form-control" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for state" title="Type in a name">
      </div>
      <div class=" lastRefreshed">
        <button id="sort" class="btn btn-outline-light btn-sm ml-md-3 ml-1">Sort
          <svg class="bi bi-arrow-down-up" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M11 3.5a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-1 0V4a.5.5 0 0 1 .5-.5z"/>
            <path fill-rule="evenodd" d="M10.646 2.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L11 3.707 8.354 6.354a.5.5 0 1 1-.708-.708l3-3zm-9 7a.5.5 0 0 1 .708 0L5 12.293l2.646-2.647a.5.5 0 1 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 0 1 0-.708z"/>
            <path fill-rule="evenodd" d="M5 2.5a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-1 0V3a.5.5 0 0 1 .5-.5z"/>
          </svg>
        </button>
        <p class="d-flex justify-content-end text-muted mb-0">Click on State to get District wise data</p>  
      </div>
      <div class="d-flex justify-content-end text-success lastRefreshed mb-1 mb-md-3">
        <p class="mb-0">Last updated: <%= data.lastRefreshed.slice(0,10) %> <%= data.lastRefreshed.slice(11,19) %></p>
      </div>

      <table id="myTable" class="mb-2 start">
        <thead >
            <td class="pl-md-3 pl-1 heading text-white-50">State</td>
            <td> </td>
            <td class="pl-md-3 pl-1 heading text-white-50">Confirmed</td>
            <td> </td>
            <td class="pl-md-3 pl-1 heading text-white-50">Active</td>
            <td> </td>
            <td class="pl-md-3 pl-1 heading text-white-50">Recovered</td>
            <td> </td>
            <td class="pl-md-3 pl-1 heading text-white-50">Deceased</td>
        </thead>
        <tbody>
            <% data["data"]["statewise"].forEach(function(states){ %>
             
                <tr>
                  <% var stateLoc = states.state %>
                  <% if(states.state == "Dadra and Nagar Haveli and Daman and Diu"){ %>
                    <% stateLoc = "Daman and Diu" %> 
                  <% } %>
                    <td class="pl-md-3 pl-1"><a href="/city/<%= states.state %>"><%= stateLoc %></a></td>
                    <td> </td>
                    <td class="pl-md-3 pl-2 text-danger"><%= numberWithCommas(states.confirmed) %></td>
                    <td> </td>
                    <td class="pl-md-3 pl-2 text-info"><%= numberWithCommas(states.active) %></td>
                    <td> </td>
                    <td class="pl-md-3 pl-2 text-success"><%= numberWithCommas(states.recovered) %></td>
                    <td> </td>
                    <td class="pl-md-3 pl-2 text-muted"><%= numberWithCommas(states.deaths) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="mb-5 pl-md-3 pl-2 text-dark lastRefreshed">All data are taken from reliable sources</div>
    </div>
  </div>
</div>


<!-- js -->
<script>
    function myFunction() {
      var input, filter, table, tr, td, i, txtValue;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("myTable");
      table.classList.remove("start");
      tr = table.getElementsByTagName("tr");
      var count = 0;
      for (i = 1; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0];
        if (td) {
          txtValue = td.textContent || td.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            count++;
            tr[i].style.display = "";
            if(count%2==0)
            {
              tr[i].classList.add("even"); 
            }
            else{
              tr[i].classList.remove("even"); 
                }
          } else {
            tr[i].style.display = "none";
          }
        }       
      }
    }

    var button = document.querySelector('button');
    button.addEventListener('click', function(){
var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0,n=2;

table = document.getElementById('myTable');
switching = true;
dir = "asc";
while (switching) {
    switching = false;
    rows = table.getElementsByTagName("tr");
    for (i = 1; i < (rows.length - 1); i++) {
        shouldSwitch = false;
        x = rows[i].getElementsByTagName("td")[n];
        x=x.innerHTML.replace(/\,/g,'');
        x=parseInt(x,10);
        y = rows[i + 1].getElementsByTagName("td")[n];
        y=y.innerHTML.replace(/\,/g,'');
        y=parseInt(y,10);
        if (dir == "asc") {
            if (x > y) {
                shouldSwitch= true;
                break;
            }
        } else if (dir == "desc") {
            if (x < y) {
                shouldSwitch= true;
                break;
            }
        }
    }
    if (shouldSwitch) {
        rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
        switching = true;
        switchcount ++;      
    } else {
        if (switchcount == 0 && dir == "asc") {
            dir = "desc";
            switching = true;
        }
    }
}

    })
</script>


